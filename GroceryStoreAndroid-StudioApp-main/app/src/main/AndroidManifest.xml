<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.storeqrscanner">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoreQRScanner">
        <activity android:name=".activities.ResetPasswordActivity"></activity>
        <activity android:name=".activities.AddCardActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/Theme.StoreQRScanner.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Scanner" />
        <activity android:name=".item_list" />
        <activity android:name=".AddItem" />
        <activity
            android:name=".Home2"
            android:label="@string/title_activity_home2"
            android:theme="@style/Theme.StoreQRScanner.NoActionBar" />
        <activity android:name=".Home" />
        <activity
            android:name=".activities.Register"
            android:theme="@style/Theme.StoreQRScanner.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.StoreQRScanner.NoActionBar" />
        <activity
            android:name=".activities.Capture"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
    </application>

</manifest>