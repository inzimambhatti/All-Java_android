<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/purple_500"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:text="@string/this_is_item_name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/imageView2"
            android:text="@string/this_is_item_price"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantity"
            android:text="Available Quantity"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/itemName"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemDiscount"
            android:text="@string/this_is_item_discount"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/itemQuantity"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/startItemDiscount"
            android:text="Start on :"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/itemDiscount"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/endItemDiscount"
            android:text="End on :"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/startItemDiscount"
            android:layout_marginLeft="100dp"/>

        <ImageButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startItemDiscount"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnDelete"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            android:background="@null"
            android:tint="@color/white"
            android:layout_alignParentRight="true" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>