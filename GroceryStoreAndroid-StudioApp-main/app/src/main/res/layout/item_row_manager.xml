<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/side_nav_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:text="@string/this_is_item_name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/imageView2"
            android:text="@string/this_is_item_price"
            android:textColor="#000"
            android:textSize="12sp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantity"
            android:text="Available Quantity"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_below="@id/itemName"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemDiscount"
            android:text="@string/this_is_item_discount"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_below="@id/itemQuantity"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/startItemDiscount"
            android:text="Start on :"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_below="@id/itemDiscount"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/endItemDiscount"
            android:text="End on :"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_below="@id/startItemDiscount"
            android:layout_marginLeft="100dp"/>


        <Button
            android:id="@+id/editItem"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/endItemDiscount"
            android:text="Edit"
            android:textColor="#0E5A4B"
            android:textSize="10sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/deleteItem"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/endItemDiscount"
            android:layout_toRightOf="@id/editItem"
            android:text="Delete"
            android:textColor="#0E5A4B"
            android:textSize="10sp"
            app:backgroundTint="#FFFFFF" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>